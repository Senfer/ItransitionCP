@model System.Collections.Generic.IEnumerable<CourseProject.Models.UserTask>

@{
    ViewBag.Title = "Home Page";
    Dictionary<string, string> Colors = new Dictionary<string, string>
    {
        {"HARD", "#ff6a00"},
        {"MEDIUM", "#fcd332"},
        {"EASY", "#87ff00"}
    };
}

<!DOCTYPE html>


<style>
    .block {
        height: auto;
        background-color: lightgray;
        margin-top: 30px;
        margin-left: 30px;
        margin-right: 30px;
        box-shadow: 30px 30px 25px rgba(4, 4, 4, 0.3);
        display: normal;
        vertical-align: top;
        text-align: left;
        padding: 2px;
        width:auto;
    }

    .block-header {
        
        height: auto;
        width: auto;
        top: 0px;
        left: 0px;
        background-color: #fcd332;
    }

    .block-header-text {
        font-size: 25px;
        font-family: 'Segoe UI';
        font-weight: lighter;
        color: white;
        padding: 10px;
        margin-bottom: 2px;
        display:inline-block;
        background-color: #fcd332;
    }

    .block-table-text {
        font-size:25px;
        font-family: 'Segoe UI';
        font-weight: lighter;
        
        margin: 0px;
        padding: 5px;
    }

    .block-header-btn {
        font-size:25px; 
        display:inline-block; 
        padding-top:15px; 
        margin:0px; 
        right:0px; 
        background-color:#fcd332; 
        color:white; 
        vertical-align:top;
        border-radius:0px;
        border:0px;
        border-left:2px solid lightgray;
        border-right:2px solid lightgray;
    }

    .glyphicon.glyphicon-one-fine-dot:before {
        content: "\25cf";
        font-size: 35px;
        margin-bottom: 0px;
        padding: 0px;
    }

    .navbar-fixed-top {
        background-color: #fcd332;
        box-shadow: 0px 10px 25px rgba(4, 4, 4, 0.3);
    }
</style>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FullTable</title>
</head>
<body>
    <div> 
        <div class="block">
            <div class="block-header" style="text-align:left">
                <div style="display:inline-block; vertical-align:middle">
                    <p class="block-header-text" style="margin:0px; vertical-align:middle">ALL TASKS</p>
                </div>
                <div style="display:inline-block; vertical-align:top">
                    <button type="button" class="btn block-header-btn" style="height:inherit; margin-bottom:0px; margin-top:0px" id="AddTag">
                        <span class="glyphicon glyphicon-sort-by-alphabet" aria-hidden="true" style="color:white">
                        </span>
                        <p class="block-header-text" style="margin:0px; padding:0px; font-size:large">DIFFICULTY</p>
                    </button>
                    <button type="button" class="btn block-header-btn" style="height:100%; margin-bottom:0px; margin-top:0px" id="AddTag">
                        <span class="glyphicon glyphicon-sort-by-alphabet" aria-hidden="true" style="color:white">
                        </span>
                        <p class="block-header-text" style="margin:0px; padding:0px; font-size:large">THEME</p>
                    </button>
                    <button type="button" class="btn block-header-btn" style="height:100%; margin-bottom:0px; margin-top:0px" id="AddTag">
                        <span class="glyphicon glyphicon-sort-by-alphabet" aria-hidden="true" style="color:white">
                        </span>
                        <p class="block-header-text" style="margin:0px; padding:0px; font-size:large">RATING</p>
                    </button>
                    <button type="button" class="btn block-header-btn" style="height:100%; margin-bottom:0px; margin-top:0px" id="AddTag">
                        <span class="glyphicon glyphicon-sort-by-alphabet" aria-hidden="true" style="color:white">
                        </span>
                        <p class="block-header-text" style="margin:0px; padding:0px; font-size:large">TIME</p>
                    </button>

                    <button type="button" class="btn block-header-btn" style="height:100%; margin-bottom:0px; margin-top:0px; border-left:5px solid gray" id="AddTag">
                        <span class="glyphicon glyphicon-sort-by-attributes" aria-hidden="true" style="color:white">
                        </span>
                    </button>
                    <button type="button" class="btn block-header-btn" style="height:100%; margin-bottom:0px; margin-top:0px" id="AddTag">
                        <span class="glyphicon glyphicon-sort-by-attributes-alt" aria-hidden="true" style="color:white">
                        </span>
                    </button>

                    <button type="button" class="btn block-header-btn" style="height:100%; margin-bottom:0px; margin-top:0px; border-left:5px solid gray" id="AddTag">
                        <span class="glyphicon glyphicon-list" aria-hidden="true" style="color:white">
                        </span>
                        <p class="block-header-text" style="margin:0px; padding:0px; font-size:large">5</p>
                    </button>
                    <button type="button" class="btn block-header-btn" style="height:100%; margin-bottom:0px; margin-top:0px" id="AddTag">
                        <span class="glyphicon glyphicon-list" aria-hidden="true" style="color:white">
                        </span>
                        <p class="block-header-text" style="margin:0px; padding:0px; font-size:large">10</p>
                    </button>
                    <button type="button" class="btn block-header-btn" style="height:100%; margin-bottom:0px; margin-top:0px" id="AddTag">
                        <span class="glyphicon glyphicon-list" aria-hidden="true" style="color:white">
                        </span>
                        <p class="block-header-text" style="margin:0px; padding:0px; font-size:large">15</p>
                    </button>
                    <button type="button" class="btn block-header-btn" style="height:100%; margin-bottom:0px; margin-top:0px" id="AddTag">
                        <span class="glyphicon glyphicon-list" aria-hidden="true" style="color:white">
                        </span>
                        <p class="block-header-text" style="margin:0px; padding:0px; font-size:large">20</p>
                    </button>
                </div>
            </div>
            <div>
                <table style="width:100%">
                    <thead style="color:gray">
                        <tr style="background-color:lightgray; border:3px solid lightgray">
                            <td class="block-table-text" style="padding:0px; width:50%; padding:4px; border-left:2px solid gray">
                                NAME
                            </td>
                            <td class="block-table-text" style="padding:0px; width:10%;  padding:4px; border-left:2px solid gray">
                                RATING
                            </td>
                            <td class="block-table-text" style=" width:25%; padding:4px; border-left:2px solid gray">
                                THEME
                            </td>
                            <td class="block-table-text" style=" width:15%; padding:4px; border-left:2px solid gray">
                                DIFFICULTY
                            </td>
                        </tr>
                    </thead>
                    @foreach (CourseProject.Models.UserTask i in Model.Reverse())
                    {
                        float RatingValue;
                        RatingValue = ((float)i.TaskRating / i.TaskRatingCount);
                        string Rating = RatingValue.ToString();
                        if (Rating.Length > 3)
                        {
                            Rating = Rating.Substring(0, 3);
                        }
                        <tr style="background-color:white; border:3px solid lightgray; color:@Colors[i.TaskDifficulty]">
                            <td class="block-table-text" style="padding:0px; width:50%; padding:4px">
                                @Html.ActionLink(@i.TaskName, "SolvingTask", "Manage", new { id = i.UserTaskID }, new { @style = "width:100%; height:100%; padding:0px; text-align:left", @class = "block-table-text", })
                            </td>
                            <td class="block-table-text" style="padding:0px; width:10%; padding:4px">
                                @Rating
                            </td>
                            <td class="block-table-text" style="width:25%; padding:4px">
                                @i.TaskCategory
                            </td>
                            <td class="block-table-text" style="width:15%; padding:4px">
                                @i.TaskDifficulty
                            </td>
                        </tr>
                    }
                    
                </table>
            </div>
            <div style="text-align:right">
                <button class="btn block-table-text" style="background-color:#fcd332; font-size:large; color:white" align="right">VIEW MORE</button>
            </div>
        </div>
    </div>
</body>
</html>
